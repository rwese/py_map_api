    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Unittest Discover",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "-s",
                "tests",
                "-t",
                "src"
            ],
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "--app-dir",
                "src",
                "app.api:app",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}